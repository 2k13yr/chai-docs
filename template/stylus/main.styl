fez-reset()


chaiblue = #30759C
chaicream = #FAF4E8
chaiswirl = #E9CE99

primary = #FAF4E8 //#F2EBD8 // background
accent = darken(primary, 60%)//#90BFC9 //darken(#fff, 15%)
headers = #784942 //449B33 // BD9462
ghbg = #81A27D//E8DEAD

buttonbig = #A40802 //A32931
buttonsmall = #575639
accentbg = #A32931

@import 'layout'

font_primary =  "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
font_fancy = "Redressed", "Helvetica Neue", Helvetica, Arial, sans-serif

button()
  line-height 30px
  display inline-block
  background linear-gradient(top, lighten(chaiblue, 10%), chaiblue)
  color chaicream
  padding 0 31px 0px 8px
  border-radius 3px
  box-shadow 1px 1px 5px rgba(0,0,0,30%)
  border 1px solid darken(chaiblue, 20%)
  text-shadow 1px 1px 0px darken(chaiblue, 30%)
  position relative
  &:hover
    background linear-gradient(top, lighten(chaiblue, 20%), lighten(chaiblue, 10%))
  span.arrow
    text-align center
    text-shadow none
    position absolute
    display block
    top 9px
    right 8px
    background-color chaicream
    color chaiblue
    border-radius 20px
    width 13px
    height 13px
    line-height 7px
    overflow hidden
    font-size 24px
    text-indent -15px

button-simple()
  line-height 30px
  display inline-block
  padding 0 31px 0px 8px
  position relative
  border-radius 3px
  color #A40802
  span.arrow
    text-align center
    text-shadow none
    position absolute
    display block
    top 9px
    right 8px
    background-color #A40802
    color #fff
    border-radius 20px
    width 13px
    height 13px
    line-height 7px
    overflow hidden
    font-size 24px
    text-indent -15px
  &:hover
    color #fff
    background-color #A40802
    span.arrow
      color #A40802
      background-color #fff

